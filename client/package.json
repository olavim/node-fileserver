{
  "name": "node-fileserver-client",
  "version": "1.0.0",
  "description": "",
  "main": "dev-server.js",
  "scripts": {
    "lint": "xo",
    "test": "xo && echo \"Error: no test specified\" && exit 1",
    "start": "node dev-server.js",
    "clean": "rimraf build",
    "build": "npm run build:webpack",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tilastokeskus/node-fileserver.git"
  },
  "keywords": [
    "node",
    "react",
    "fileserver"
  ],
  "author": "Olavi Mustanoja",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tilastokeskus/node-fileserver/issues"
  },
  "dependencies": {
    "axios": "^0.9.1",
    "babel-core": "~6.7.6",
    "babel-loader": "~6.2.4",
    "babel-preset-es2015": "~6.6.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "file-loader": "^0.8.5",
    "highlight.js": "^9.3.0",
    "moment": "^2.12.0",
    "node-sass": "^3.4.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.1",
    "redux": "^3.4.0",
    "redux-batched-actions": "^0.1.2",
    "redux-thunk": "^2.0.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "~1.12.15",
    "webworker": "^0.8.4",
    "worker-loader": "^0.7.0"
  },
  "devDependencies": {
    "babel-cli": "~6.7.5",
    "xo": "^0.16.0"
  },
  "homepage": "https://github.com/tilastokeskus/node-fileserver#readme",
  "xo": {
    "envs": ["node", "browser", "es6"],
    "esnext": true,
    "plugins": ["react"],
    "rules": {
      "xo/filename-case": ["warn", {"case": "kebabCase"}],
      "react/display-name": 2,
      "react/jsx-no-duplicate-props": 2,
      "react/jsx-no-undef": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/no-danger": 2,
      "react/no-deprecated": 2,
      "react/no-did-mount-set-state": [2, "allow-in-func"],
      "react/no-did-update-set-state": [2, "allow-in-func"],
      "react/no-direct-mutation-state": 2,
      "react/no-is-mounted": 2,
      "react/no-unknown-property": 2,
      "react/no-render-return-value": 2,
      "react/prop-types": 2,
      "react/react-in-jsx-scope": 2
    },
    "overrides": [
      {
        "files": "src/containers/*.js",
        "rules": {"xo/filename-case": ["warn", {"case": "pascalCase"}]}
      },
      {
        "files": "src/components/*.js",
        "rules": {"xo/filename-case": ["warn", {"case": "pascalCase"}]}
      },
      {
        "files": "src/routes/FileView/components/*.js",
        "rules": {"xo/filename-case": ["warn", {"case": "pascalCase"}]}
      },
      {
        "files": "src/routes/FileView/containers/*.js",
        "rules": {"xo/filename-case": ["warn", {"case": "pascalCase"}]}
      }
    ]
  }
}
